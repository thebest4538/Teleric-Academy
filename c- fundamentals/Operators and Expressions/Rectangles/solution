using System;


namespace Devideby5and7
{
    class Program
    {
        static void Main()
        {
            double w = double.Parse(Console.ReadLine());
            double h = double.Parse(Console.ReadLine());
            double area = w * h;
            double perimeter = (w + w) + (h + h);
            Console.WriteLine("{0:0.00}" + " " + "{1:0.00}" , area , perimeter);
        }
    }
}
